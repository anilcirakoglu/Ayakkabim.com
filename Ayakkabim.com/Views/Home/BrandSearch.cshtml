@model IEnumerable<Ayakkabim.com.Models.Product>


@{
    ViewData["Title"] = "Home Page";
    
}



<div class="slideshow-container">

    <div class="mySlides fade">
        <div class="numbertext">1 / 3</div>
        <img src="https://img-ayakkabidunyasi.mncdn.com/Content/Images/Thumbs/0146905.jpeg" style="width:100%" />

    </div>

    <div class="mySlides fade">
        <div class="numbertext">2 / 3</div>
        <img src="https://img-ayakkabidunyasi.mncdn.com/Content/Images/Thumbs/0148041.jpeg" style="width:100%" />


    </div>

    <div class="mySlides fade">
        <div class="numbertext">3 / 3</div>
        <img src="https://img-ayakkabidunyasi.mncdn.com/Content/Images/Thumbs/0147038.jpeg" style="width:100%" />


    </div>



    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <a class="next" onclick="plusSlides(1)">❯</a>

</div>
<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
</div>
<div>
    <table class="slideshow-container">
        <thead>
            <tr>
                @foreach (var item in Model.Take(3))
                {


                    <td> <img src="@FileLocation.RetriveFileFromFolder@item.Image" class="img-thumbnail" height="290" width="400" asp-append-version="true" /></td>



                }
            <tr>

                    @foreach (var item in Model.Take(3))
                    {
                    <td>
                        <a asp-action="ProductBuy" asp-controller="Products" asp-route-id="@item.id">Detaylar</a> |
                            @item.Brand<br>
                            @item.name<br>
                        fiyat : @item.Price
                    </td>
                    }
            </tr>

        </thead>
        <tbody>


            <tr>
                @foreach (var item in Model.Skip(3).Take(3))
                {

                    <td> <img src="@FileLocation.RetriveFileFromFolder@item.Image" class="img-thumbnail" height="290px" width="400px" asp-append-version="true" /></td>

                }
            </tr>


            <tr>


                @foreach (var item in Model.Skip(3).Take(3))
                {
                    <td>
                        <a asp-action="ProductBuy" asp-controller="Products" asp-route-id="@item.id">Detaylar</a> |
                        @item.Brand<br>
                        @item.name<br>
                        fiyat : @item.Price
                    </td>

                }
            </tr>

        </tbody>
        <tbody>



            <tr>
                @foreach (var item in Model.Skip(6).Take(3))
                {


                    <td> <img src="@FileLocation.RetriveFileFromFolder@item.Image" class="img-thumbnail" height="290px" width="400px" asp-append-version="true" /></td>


                }
            <tr>

                    @foreach (var item in Model.Skip(6).Take(3))
                    {

                    <td>
                        <a asp-action="ProductBuy" asp-controller="Products" asp-route-id="@item.id">Detaylar</a> |
                            @item.Brand<br>
                            @item.name<br>
                        fiyat : @item.Price
                    </td>

                    }

        </tbody>

    </table>
</div>
